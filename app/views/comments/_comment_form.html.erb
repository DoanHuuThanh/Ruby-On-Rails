  <!-- Form for adding comments -->
  <%= form_with(model: micropost.comments.build, local: true, html: { class: "form-post", id: "form-post-#{micropost.id}", remote: true }) do |form| %>
    <%= form.hidden_field :micropost_id, value: micropost.id, id: "micropost-id-field-#{micropost.id}" %>
    <%= form.hidden_field :parent_id, value: micropost.id, id: "parent-id-field-#{micropost.id}" %>
    <%= form.text_area :content, id: "comment-content-#{micropost.id}", placeholder: 'Add a comment...', class: "w-full p-2 border rounded" %>
    <%= form.submit 'Post', id: "button-comment-content-#{micropost.id}", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hidden" %>
    <%= form.file_field :image, id: "image-#{micropost.id}" %>
  <% end %>
