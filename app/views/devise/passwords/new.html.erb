<h2 class="text-2xl font-bold mb-4">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-600" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 border rounded-md w-1/4" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Send me reset password instructions", class: "bg-blue-500 text-white  p-2 rounded-md" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
