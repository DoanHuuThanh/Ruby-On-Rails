<div class="max-w-md mx-auto mt-8 bg-white p-8 rounded shadow-md">
  <h2 class="text-2xl font-bold mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %><br />
      <%= f.text_field :name, class: "w-full border p-2 rounded focus:outline-none focus:border-blue-500", autofocus: true, autocomplete: "name" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %><br />
      <%= f.email_field :email, class: "w-full border p-2 rounded focus:outline-none focus:border-blue-500", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %><br />
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: "w-full border p-2 rounded focus:outline-none focus:border-blue-500", autocomplete: "new-password" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %><br />
      <%= f.password_field :password_confirmation, class: "w-full border p-2 rounded focus:outline-none focus:border-blue-500", autocomplete: "new-password" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
