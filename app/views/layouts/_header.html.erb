<header class="bg-black fixed top-0 w-full">
  <div class="container mx-auto flex items-center justify-between p-4">
    <%= link_to "App", root_path, id: "logo", class: "text-white text-lg font-bold" %>
    <button class="lg:hidden text-white" id="navbar-toggle">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="hidden lg:flex items-center" id="navbarNav">
      <ul class="flex items-center space-x-4 ml-auto">
        <li class="nav-item">
          <%= link_to "Home", home_path, class: "text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "Help", help_path, class: "text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "text-white" %>
        </li>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "text-white" %>
          </li>

        <% if logged_in? %>
          <li class="nav-item dropdown">
            <%= link_to "#", class: "text-white dropdown-toggle", role: "button", "data-toggle": "dropdown", "aria-expanded": "false" do %>
              Account <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Profile", current_user, class: "dropdown-item" %>
              </li>
              <li>
                <%= link_to "Setting", edit_user_path(current_user), class: "dropdown-item" %>
              </li>
              <li>
                <%= link_to "Logout", logout_path, method: :delete, class: "dropdown-item" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
