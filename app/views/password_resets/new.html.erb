<% provide(:title, "Forgot password") %>

<div class="flex items-center justify-center h-screen">
  <div class="w-full sm:w-96 bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-6">Forgot Password</h1>
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.email_field :email, class: 'w-full p-2 border rounded-md focus:outline-none focus:border-blue-500' %>
      </div>
      <%= f.submit "Submit", class: "w-full p-3 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800 mt-4" %>
    <% end %>
  </div>
</div>
