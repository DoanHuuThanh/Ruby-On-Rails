<% provide(:title, "Log in") %>

<div class="flex items-center justify-center h-screen bg-gray-100">
  <div class="w-full sm:w-96 bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center text-blue-500">Log in</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
       
      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.email_field :email, class: 'w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.password_field :password, class: 'w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500' %>
      </div>
      
      <div class="mb-4 flex items-center">
        <%= f.check_box  :remember_me, class: 'w-4 h-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500' %>
        <span class="ml-2 text-gray-600">Remember me on this computer</span>
      </div> 

      <%= f.submit "Log in", class: "w-full p-3 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800", id: "login" %>
    <% end %>

    <%= link_to "Forgot password", password_resets_new_path, class: "block text-blue-500 hover:underline text-sm mt-2" %>

    <p class="mt-4 text-center text-gray-600">New user? <%= link_to "Sign up now!", signup_path, class: "text-blue-500 hover:underline" %></p>
     <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
  </div>
</div>
