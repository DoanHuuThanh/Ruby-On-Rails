<div class="flex items-center mb-4">
  <%= link_to gravatar_for(current_user, size: 50), current_user, class: "mr-4 rounded-full" %>
  <div>
    <h1 class="text-2xl font-bold mb-2"><%= current_user.name %></h1>
    <span class="text-gray-500 text-sm">
      <%= link_to "View my profile", current_user, class: "text-blue-500 hover:underline" %>
    </span>
    <span class="text-gray-500 text-sm">
      <%= pluralize(current_user.microposts.count, "micropost") %>
    </span>
  </div>
</div>
