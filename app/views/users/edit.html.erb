<% provide(:title, "Edit User") %>

<div class="flex items-center justify-center h-screen" >
  <div class="w-full sm:w-96 bg-white p-8 rounded-lg shadow-md" style="margin-top:-230px">
    <h1 class="text-2xl font-bold mb-6">Update Profile</h1>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="mb-4">
        <%= f.label :name, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.text_field :name, class: 'w-full p-2 border rounded-md focus:outline-none focus:border-blue-500' %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.email_field :email, class: 'w-full p-2 border rounded-md focus:outline-none focus:border-blue-500' %>
      </div>
      
      <%= f.submit "Save changes", class: "w-full p-2 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>
    <% end %>

   

  </div>
</div>
