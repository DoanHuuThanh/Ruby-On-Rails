<% provide(:title, @user.name) %>
<div class="flex">
  <aside class="w-1/3 p-4 bg-gray-100">
    <section class="user_info">
      <div class="flex items-center mb-4">
        <%= gravatar_for @user, size: 50, class: "rounded-full" %>
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-gray-800">
            <%= @user.name %>
          </h1>
          <!-- Add a class for other user information (e.g., email, address) if needed -->
        </div>
      </div>
    </section>
    <section class="stats">
      <%= render 'shared/stat' %>
    </section>
  </aside>

  <div class="w-2/3 p-4">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3 class="text-lg font-bold mb-4">Micropost (<%= @user.microposts.count %>)</h3>
      <ol class="list-decimal pl-4">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, class: "mt-4 flex justify-end" %>
      <!-- Added "flex justify-end" to move the pagination links to the right -->
    <% end %>
  </div>
</div>